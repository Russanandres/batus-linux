#!/bin/bash
VER="1 BFLS"
VERMENU="Octa"
LINDSTR="PocketBook systems"
linx=Linux
startuptime=$(date)

### IF/ELSE инициализация

# Аргументы запуска
if [ "$1" == "-v" ]; then
 echo $VER
 exit
elif [ "$1" == "-h" ]; then
 echo Batus For Legacy systems.sh
 echo bash скрипт для организации команд
 echo
 echo Данная версия сделана для PocketBook
 echo Тестировалось на PocketBook 624
 echo Основанно на Batus For Legacy Systems.sh 1.0
 echo
 echo для списка доступных команд запустите с аргументом --commands
 exit
elif [ "$1" == "--force-quit" ]; then
 clear
 echo Batus For PocketBook.sh $VER - 2020-2022. Russanandres
 date
 exit
elif [ "$1" == "--commands" ]; then
 echo [batus] список доступных команд:
 echo [batus] -v - выводит версию микропрограммы
 echo [batus] -h - выводит справку о микропрограмме
 echo [batus] --force-quit - экстренно выходит из микропрограммы
 exit
fi

# заставка
clear
echo ......................................
echo ......................................
echo ..//////////.....////.......///////...
echo ..///////////....////......///////....
echo ..///....////....////......////.......
echo ..////...////....////......////.......
echo ..////////.......////.......////......
echo ..////////////...////........////.....
echo ..///.....////...////.........////....
echo ..////....////...////..........////...
echo ..////////////...////////....//////...
echo ..//////////.....////////...///////...
echo ......................................
echo ...Batus.PocketBook.sh......BETA......
echo ......................................
echo Проснитесь и пойте мистер $USER, проснитесь и пойте
echo
sleep 2
# следующая часть


clear
date
echo [ver] версия скрипта
echo [re] перезагрузка
echo [deb] откладка
echo [quit] выход
read ch
case "$ch" in
"ver" )
clear
echo ......................................
echo ......................................
echo ..//////////.....////.......///////...
echo ..///////////....////......///////....
echo ..///....////....////......////.......
echo ..////...////....////......////.......
echo ..////////.......////.......////......
echo ..////////////...////........////.....
echo ..///.....////...////.........////....
echo ..////....////...////..........////...
echo ..////////////...////////....//////...
echo ..//////////.....////////...///////...
echo ......................................
echo ...Batus.PocketBook.sh......BETA......
echo ......................................
echo
echo Версия - $VER
echo Версия меню - $VERMENU
echo
uname -a
echo
read -p "Нажмите ENTER для выхода..."
;;
"re" )
echo Введита пароль для перезагрузки:
read -p "Вы уверенны? " -n 1 -r
if [[ $REPLY =~ ^[YyДд]$ ]]; then
reboot
fi
;;
"deb" )
echo [ex] выйти с ошибкой
echo [env] показать переменные
echo [inf] показать инфо
echo [quit] выход
read chd
case "$chd" in
 "ex" )
 exit 255;;
 "env" )
 clear & date & env & read -p "Нажмите ENTER для выхода...";;
 "inf" )
 clear
 echo ......................................
 echo ......................................
 echo ..//////////.....////.......///////...
 echo ..///////////....////......///////....
 echo ..///....////....////......////.......
 echo ..////...////....////......////.......
 echo ..////////.......////.......////......
 echo ..////////////...////........////.....
 echo ..///.....////...////.........////....
 echo ..////....////...////..........////...
 echo ..////////////...////////....//////...
 echo ..//////////.....////////...///////...
 echo ......................................
 echo ...Batus.PocketBook.sh......BETA......
 echo ......................................
 echo
 echo Версия - $VER
 echo Версия меню - $VERMENU
 echo
 uname -a
 echo
 echo Время запуска - $startuptime
 echo Терминал [1] - $SHELL
 echo Терминал [2] - $TERM
 echo Версия терминала - $BASH_VERSION
 echo Аргументы запуска - $@
 echo Дистрибутив - $LINDSTR
 echo Определённое семейство - $linx
 echo Имя пользователя - $USER
 echo Домашняя директория - $HOME
 read -p "Нажмите ENTER для выхода...";;
 "quit" )
 clear
 echo Batus For PocketBook.sh $VER - 2020-2022. Russanandres
 date
 exit;;
esac
;;
"quit" )
clear
echo Batus For PocketBook.sh $VER - 2020-2022. Russanandres
date
exit;;
esac

